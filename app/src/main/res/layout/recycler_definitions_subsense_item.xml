<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="2dp">

    <TextView
        android:layout_marginStart="16dp"
        android:id="@+id/subsense"
        android:textColor="#000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/subsenseStar"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageButton
        android:id="@+id/subsenseStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_action_star"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:textSize="15sp"
        android:id="@+id/subExample"
        android:textColor="#000000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toStartOf="@+id/subsenseStar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subsense" />
</android.support.constraint.ConstraintLayout>

